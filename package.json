{
	"name": "vue-popup-plus-root",
	"private": true,
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "pnpm --filter playground dev",
		"dev:docs": "pnpm --filter docs dev",
		"dev:doc": "pnpm --filter doc dev",
		"build:core": "pnpm --filter vue-popup-plus build",
		"build:plugin": "pnpm --filter vue-popup-plus-plugin-preset build",
		"build:docs": "pnpm --filter docs build",
		"build:doc": "pnpm --filter doc build",
		"preview:docs": "pnpm --filter docs preview",
		"preview:doc": "pnpm --filter doc preview",
		"publish:core": "pnpm --filter vue-popup-plus publish",
		"publish:plugin": "pnpm --filter vue-popup-plus-plugin-preset publish"
	}
}
