{
	"name": "vue-popup-plus-root",
	"private": true,
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "pnpm --filter playground dev",
		"dev:docs": "pnpm --filter docs dev",
		"build:core": "pnpm --filter vue-popup-plus build",
		"build:plugin": "pnpm --filter vue-popup-plus-plugin-preset build",
		"build:docs": "pnpm --filter docs build",
		"build:md-demo": "pnpm --filter vitepress-plugin-markdown-container-demo build",
		"preview:docs": "pnpm --filter docs preview",
		"publish:core": "pnpm --filter vue-popup-plus publish --registry=https://registry.npmjs.org",
		"publish:plugin": "pnpm --filter vue-popup-plus-plugin-preset publish --registry=https://registry.npmjs.org",
		"publish:md-demo": "pnpm --filter vitepress-plugin-markdown-container-demo publish --registry=https://registry.npmjs.org",
		"login": "npm login --registry=https://registry.npmjs.org"
	}
}
