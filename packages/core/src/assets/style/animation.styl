$name-space = 'vue-popup-plus-animation'

generateAnimation($type,$name)
	.vue-popup-plus-animation-{$type}-{$name}
		animation-name unquote($name-space+'-'+$type+'-'+$name)

generateAnimation(enter,fade)
generateAnimation(leave,fade)
generateAnimation(enter,scale-enlarge)
generateAnimation(leave,scale-enlarge)
generateAnimation(enter,scale-reduce)
generateAnimation(leave,scale-reduce)
generateAnimation(enter,fly-top)
generateAnimation(leave,fly-top)
generateAnimation(enter,fly-left)
generateAnimation(leave,fly-left)
generateAnimation(enter,fly-right)
generateAnimation(leave,fly-right)
generateAnimation(enter,fly-bottom)
generateAnimation(leave,fly-bottom)

@keyframes {$name-space}-enter-fade
	from
		opacity 0
	to
		opacity 1
@keyframes {$name-space}-leave-fade
	from
		opacity 1
	to
		opacity 0
@keyframes {$name-space}-enter-scale-enlarge
	from
		transform scale(0)
	to
		transform scale(1)
@keyframes {$name-space}-leave-scale-enlarge
	from
		transform scale(1)
	to
		transform scale(0)
@keyframes {$name-space}-enter-scale-reduce
	from
		transform scale(5)
	to
		transform scale(1)
@keyframes {$name-space}-leave-scale-reduce
	from
		transform scale(1)
	to
		transform scale(5)
@keyframes {$name-space}-enter-fly-top
	from
		transform translateY(-100vh)
	to
		transform translateY(0)
@keyframes {$name-space}-leave-fly-top
	from
		transform translateY(0)
	to
		transform translateY(-100vh)
@keyframes {$name-space}-enter-fly-left
	from
		transform translateX(-100vw)
	to
		transform translateX(0)
@keyframes {$name-space}-leave-fly-left
	from
		transform translateX(0)
	to
		transform translateX(-100vw)
@keyframes {$name-space}-enter-fly-right
	from
		transform translateX(100vw)
	to
		transform translateX(0)
@keyframes {$name-space}-leave-fly-right
	from
		transform translateX(0)
	to
		transform translateX(100vw)
@keyframes {$name-space}-enter-fly-bottom
	from
		transform translateY(100vh)
	to
		transform translateY(0)
@keyframes {$name-space}-leave-fly-bottom
	from
		transform translateY(0)
	to
		transform translateY(100vh)
