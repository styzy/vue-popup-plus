// 生成颜色变量
generateCssColor($name, $color)
	--popup-color-{$name} $color
	--popup-color-{$name}-dark-lite darken($color, 10%)
	--popup-color-{$name}-dark darken($color, 25%)
	--popup-color-{$name}-dark-most darken($color, 60%)
	--popup-color-{$name}-light-lite lighten($color, 10%)
	--popup-color-{$name}-light lighten($color, 25%)
	--popup-color-{$name}-light-most lighten($color, 60%)

// 预置颜色
$preset-color-mask = rgba(125, 125, 125, 0.3)

:root
	generateCssColor('mask', $preset-color-mask)

// 预置暗色主题颜色
$preset-dark-color-mask = rgba(75, 75, 75, 0.3)

.dark
	generateCssColor('mask', $preset-dark-color-mask)
