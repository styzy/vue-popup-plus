{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["./src/**/*.ts", "./src/**/*.vue"],
	"exclude": ["./src/__tests__/*"],
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@utils": ["src/utils"],
			"vue": ["node_modules/vue"]
		},
		"isolatedModules": true,
		"strict": true
	}
}

