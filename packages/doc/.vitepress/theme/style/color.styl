// 生成颜色变量
generateCssColor($name, $color)
	--doc-color-{$name} $color
	--doc-color-{$name}-dark-lite darken($color, 10%)
	--doc-color-{$name}-dark darken($color, 25%)
	--doc-color-{$name}-dark-most darken($color, 50%)
	--doc-color-{$name}-light-lite lighten($color, 10%)
	--doc-color-{$name}-light lighten($color, 25%)
	--doc-color-{$name}-light-most lighten($color, 50%)

// 预置颜色
$preset-color-primary = #1c70d1
$preset-color-info = #409EFF
$preset-color-danger = #e53935
$preset-color-warning = #f5a623
$preset-color-success = #4caf50
$preset-color-text-main = #424242
$preset-color-text-sub = #666666
$preset-color-text-light = #999999
$preset-color-text-placeholder = #b6b6b6
$preset-color-border = #E8E8E8
$preset-color-background-main = #FFFFFF
$preset-color-background-sub = #F8F8F8

:root
	generateCssColor('primary', $preset-color-primary)
	generateCssColor('info', $preset-color-info)
	generateCssColor('danger', $preset-color-danger)
	generateCssColor('warning', $preset-color-warning)
	generateCssColor('success', $preset-color-success)
	generateCssColor('text-main', $preset-color-text-main)
	generateCssColor('text-sub', $preset-color-text-sub)
	generateCssColor('text-light', $preset-color-text-light)
	generateCssColor('text-placeholder', $preset-color-text-placeholder)
	generateCssColor('border', $preset-color-border)
	generateCssColor('background-main', $preset-color-background-main)
	generateCssColor('background-sub', $preset-color-background-sub)

.dark
	generateCssColor('text-main', invert($preset-color-text-main))
	generateCssColor('text-sub', invert($preset-color-text-sub))
	generateCssColor('text-light', invert($preset-color-text-light))
	generateCssColor('text-placeholder', invert($preset-color-text-placeholder))
	generateCssColor('border', invert($preset-color-border))
	generateCssColor('background-main', invert($preset-color-background-main))
	generateCssColor('background-sub', invert($preset-color-background-sub))
