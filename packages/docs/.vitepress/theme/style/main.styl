@import './color.styl'
@import './fontSize.styl'

:root:not(.dark)
	.vp-doc div[class*='language-']
		background-color #21252b
		span.lang
			color #98989F
		button.copy
			border-color: #3b3b41
			background-color #2c2d35
			&:hover,
			&.copied
				background-color #26262C
			&.copied::before
				border-color: #3b3b41
				background-color: #26262C
				color #98989F
	.vp-code-block-title-bar
		background-color #21252b
		color #98989F
		box-shadow inset 0 -1px #000000
	.vp-code-group
		.tabs
			background-color #21252b
			box-shadow inset 0 -1px #000000
		input:checked + label,
		label:hover
			color #dfdfd6

.api .vp-doc h2 .header-anchor
	opacity 1

