@import './color.styl'
@import './fontSize.styl'

:root:not(.dark)
	.vp-doc div[class*='language-']
		background-color #21252b
		span.lang
			color #98989F
		button.copy
			border-color: #3b3b41
			background-color #2c2d35
			&:hover,
			&.copied
				background-color #26262C
			&.copied::before
				border-color: #3b3b41
				background-color: #26262C
				color #98989F
	.vp-code-block-title-bar
		background-color #21252b
		color #98989F
		box-shadow inset 0 -1px #000000
	.vp-code-group
		.tabs
			background-color #21252b
			box-shadow inset 0 -1px #000000
		input:checked + label,
		label:hover
			color #dfdfd6
.api-guide
	@media (min-width 960px)
		.VPDoc:not(.has-sidebar) .container
			max-width 900px
		.VPDoc:not(.has-sidebar) .content
			max-width 800px
	@media (min-width 1440px)
		.VPDoc:not(.has-sidebar) .container
			max-width 1400px
		.VPDoc:not(.has-sidebar) .content
			max-width 1300px
.api .vp-doc h2 .header-anchor
	opacity 1

.changelog .vp-doc h2
	color var(--doc-color-primary-light)
	font-size: 36px
