{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"./.vitepress/**/*.ts",
		"./.vitepress/**/*.vue",
		"./.vitepress/**/*.mts",
		"./src/**/*.ts",
		"./src/**/*.vue"
	],
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": "./",
		"paths": {},
		"isolatedModules": true,
		"strict": true
	},
	"vueCompilerOptions": {
		"plugins": ["@vue/language-plugin-pug"]
	}
}
