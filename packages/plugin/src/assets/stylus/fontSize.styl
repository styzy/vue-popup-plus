// 生成字体大小变量
generateCssFontSize($name, $size)
	--popup-plugin-preset-font-size-{$name} $size

// 预置字体大小
$preset-font-size-title-main = 20px
$preset-font-size-title-sub = 16px
$preset-font-size-text-main = 14px
$preset-font-size-text-sub = 13px
$preset-font-size-text-mini = 12px

:root
	generateCssFontSize('title-main', $preset-font-size-title-main)
	generateCssFontSize('title-sub', $preset-font-size-title-sub)
	generateCssFontSize('text-main', $preset-font-size-text-main)
	generateCssFontSize('text-sub', $preset-font-size-text-sub)
	generateCssFontSize('text-mini', $preset-font-size-text-mini)
