
baseStyle() // 基础样式
	color var(--popup-plugin-preset-color-text-main)
	font-size var(--popup-plugin-preset-font-size-text-main)
baseDialog($type = margin) // 对话框容器
	$size = 20px

	if ($type == padding)
		box-sizing border-box
		padding $size
	else
		margin $size
baseEllipsis() // 超出文本省略号
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
baseTrans($duration = 0.3s) // 默认过度动画
	transition all $duration ease
baseScroll($color = #888888) // 默认滚动条
	&::-webkit-scrollbar
		width 10px
	&::-webkit-scrollbar-track
		background-color rgba($color, 0.1)
		border-radius 10px
	&::-webkit-scrollbar-thumb
		border-radius 10px
		background-color rgba($color, 0.2)
		&:hover
			background-color: rgba($color, 0.5)
baseColorfulText()
	background-image linear-gradient(135deg, #FF0000, #FF8600, #FFFD00, #13A200, #00DBD0, #002BB7, #B200AA, #FF0077)
	background-clip text
	color transparent
	animation run 100s linear infinite
	@keyframes run
		from
			backgroud-position 0 0
		to
			background-position -10000px 0

