@font-face
	font-family 'iconfont-popup-plugin-preset'
	src url('../fonts/iconfont.eot') /* IE9 */
	src url('../fonts/iconfont.eot#iefix') format('embedded-opentype'), url('../fonts/iconfont.woff2') format('woff2'), url('../fonts/iconfont.woff') format('woff'), url('../fonts/iconfont.ttf') format('truetype'), url('../fonts/iconfont.svg#iconfont') format('svg')
i.iconfont-popup-plugin-preset
	display inline-block
	font-style normal
	font-size 14px
	font-family 'iconfont-popup-plugin-preset' !important
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	&.close::after
		content '\eb70'
	&.alert::after
		content '\e72b'
	&.confirm::after
		content '\e72d'
	&.prompt::after
		content '\e72b'
	&.reload::after
		content '\ea48'
	&.download::after
		content '\e66c'
	// 相册
	&.album
		&-close::after
			content '\eb70'
		&-enlarge::after
			content '\ec14'
		&-narrow::after
			content '\ec13'
		&-prev::after
			content '\e7b3'
		&-next::after
			content '\e7b1'
		&-pure::after
			content '\e655'
