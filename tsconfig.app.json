{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"doc/**/*",
		"doc/**/*.vue"
	],
	"exclude": ["src/**/__tests__/*", "doc/**/__tests__/*"],
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": "./",
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"],
			"@utils": ["src/utils"],
			"@types/*": ["src/types/*"],
			"@doc/*": ["doc/*"]
		},
		"isolatedModules": true,
		"strict": true
	},
	"vueCompilerOptions": {
		"plugins": ["@vue/language-plugin-pug"]
	}
}

