{
	"extends": "./tsconfig.app.json",
	"exclude": ["**/__tests__/**", "doc/**"],
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationDir": "./typings",
		"emitDeclarationOnly": true,
		"outDir": "./typings",
		"rootDir": "./src"
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
