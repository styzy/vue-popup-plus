{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": "./",
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"],
			"@utils": ["src/utils"],
			"@types/*": ["src/types/*"]
		},
		"isolatedModules": true,
		"strict": true
	}
}

